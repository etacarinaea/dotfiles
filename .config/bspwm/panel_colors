xres=$(xrdb -query)
function getXRes {
    echo "$xres" | grep "$1:" | grep -Eo "[0-9a-fA-F]{6}"
}

COLOR_FOREGROUND="#FF$(getXRes foreground)"
COLOR_BACKGROUND="#FF$(getXRes background)"
COLOR_ACTIVE_MONITOR_FG="#FF$(getXRes color1)"
COLOR_ACTIVE_MONITOR_BG="#FF$(getXRes color1)"
COLOR_INACTIVE_MONITOR_FG="#FF$(getXRes color1)"
COLOR_INACTIVE_MONITOR_BG="#FF$(getXRes color1)"
COLOR_FOCUSED_OCCUPIED_FG=$COLOR_FOREGROUND
COLOR_FOCUSED_OCCUPIED_BG="#FF$(getXRes color1)"
COLOR_FOCUSED_FREE_FG=$COLOR_FOREGROUND
COLOR_FOCUSED_FREE_BG="#FF$(getXRes color1)"
COLOR_FOCUSED_URGENT_FG="#FF$(getXRes color1)"
COLOR_FOCUSED_URGENT_BG="#FF$(getXRes color1)"
COLOR_OCCUPIED_FG="#ca$(getXRes foreground)"
COLOR_OCCUPIED_BG=$COLOR_BACKGROUND
COLOR_FREE_FG="#ca$(getXRes foreground)"
COLOR_FREE_BG=$COLOR_BACKGROUND
COLOR_URGENT_FG="#FFFF0000"
COLOR_URGENT_BG=$COLOR_BACKGROUND
COLOR_LAYOUT_FG=$COLOR_BACKGROUND
COLOR_LAYOUT_BG=$COLOR_BACKGROUND
COLOR_TITLE_FG=$COLOR_FOREGROUND
COLOR_TITLE_BG=$COLOR_BACKGROUND
COLOR_STATUS_FG=$COLOR_FOREGROUND
COLOR_STATUS_BG=$COLOR_BACKGROUND
